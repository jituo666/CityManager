<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyWidget.ListViewItem2"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/image"
        android:ellipsize="end"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="@color/np_major_text_color"
        android:textSize="@dimen/common_text_size_middle" >
    </TextView>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignLeft="@id/text_title"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/text_title"
        android:layout_marginRight="4dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/np_minor_text_color"
        android:textSize="@dimen/common_text_size_small" >
    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/text_title"
        android:background="@drawable/np_list_divider_bg" />

</RelativeLayout>